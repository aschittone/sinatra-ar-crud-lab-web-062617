  <label for="">Name: </label><input type="text" name="name" value="<%=@post.name%>">
  <br></br>
  <label for="">Content: </label><input type="text" name="content" value="<%=@post.content%>">
  <br></br>
  <input type="submit" value="submit">
</form>
